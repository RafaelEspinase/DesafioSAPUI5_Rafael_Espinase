<mvc:View 
controllerName="desafio.l4e.app.controller.CadastroPlataformas" 
xmlns:form="sap.ui.layout.form"
xmlns:mvc="sap.ui.core.mvc" 
xmlns:core="sap.ui.core"
displayBlock="true" 
xmlns="sap.m">

    <Page id="form" showHeader="true" title="Cadastro de Plataformas" titleAlignment="Center">
        <content>
            <form:Form>
                <form:title>
                    <core:Title text="Preencha os campos necessÃ¡rios" level="H6"></core:Title>
                </form:title>
                <form:layout>
                    <form:ColumnLayout columnsL="3" columnsM="1" columnsXL="3"></form:ColumnLayout>
                </form:layout>
                
                <form:formContainers>
                    <form:FormContainer >
                        <form:formElements >

                            <form:FormElement >
                                <form:label>
                                    <Label  text="nome" design="Bold"></Label>
                                </form:label>
                                <form:fields>
                                    <Input value="{Plataforma>/nome}" placeholder="Ex.: Twitch"></Input>
                                </form:fields>
                            </form:FormElement>

                            

                            <form:FormElement >
                                <form:label>
                                    <Label  text="Status" design="Bold"></Label>
                                </form:label>
                                <form:fields>
                                    
                                    <RadioButton
                                        valueState="Success"
                                        select="onSelectRadioButton"
                                        groupName="GroupB"
                                        text="Ativo" />
                                    <RadioButton
                                        valueState="Error"
                                        select="onSelectRadioButton"
                                        groupName="GroupB"
                                        text="Inativo" />
                                    
                                    <!--><Switch type="AcceptReject" change="onChangeSwitch" state="{= ${Plataforma>/status ==='A' ? true : false}}"></Switch><-->
                                </form:fields>
                            </form:FormElement>
                        </form:formElements>
                    </form:FormContainer>
                </form:formContainers>
            </form:Form>
            <form:Form>
                <form:layout>
                    <form:ColumnLayout columnsL="3" columnsM="1" columnsXL="3"></form:ColumnLayout>
                </form:layout>
<form:formContainers>
                    <form:FormContainer >
                        <form:formElements >

                            <form:FormElement >
                                <form:label>
                                    <Label  text="Tipo" design="Bold"></Label>
                                </form:label>
                                <form:fields>
                                    <Input value="{Plataforma>/tipo}" placeholder="Ex.: Plataforma de Stream"></Input>
                                </form:fields>
                            </form:FormElement>

                            

                        </form:formElements>
                    </form:FormContainer>
                </form:formContainers>
            </form:Form>
            <form:Form>
                <form:layout>
                    <form:ColumnLayout columnsL="2" columnsM="1" columnsXL="2"></form:ColumnLayout>
                </form:layout>
<form:formContainers>
                    <form:FormContainer >
                        <form:formElements >

                            <form:FormElement >
                                <Button text="Confirmar" type="Emphasized" press="onConfirmar"/>
                            </form:FormElement>

                            <form:FormElement >
                                <Button text="Cancelar" type="Reject" press="onCancelar"/>
                            </form:FormElement>

                        </form:formElements>
                    </form:FormContainer>
                </form:formContainers>
            </form:Form>
        </content>
        
    </Page>

</mvc:View>